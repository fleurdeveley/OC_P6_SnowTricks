{% extends "base.html.twig" %}

{% block title %}SnowTricks - Inscription{% endblock %}

{% block body %}
    <div class="row justify-content-center">
		<div class="col-xs-12 col-sm-8 col-md-6 col-lg-5 bg-light mt-2 mb-2 p-4 border border-dark">
            <div class="text-center color-perso2">
				<h3>Inscription</h3>
			</div>

            {{ form_start(formView, {'attr': { 'novalidate': 'novalidate' }}) }}

			<div class="row">
				<div class="col">
					{{ form_row(formView.fullName) }}
					{{ form_row(formView.email) }}
					{{ form_row(formView.password) }}
					{{ form_row(formView.avatar) }}
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn text-white bg-perso2 mb-3">
					S'inscrire
				</button>
			</div>

			{{ form_end(formView) }}
		</div>
	</div>
{% endblock %}