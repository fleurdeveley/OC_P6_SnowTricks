{% extends "base.html.twig" %}

{% block title %}
	SnowTricks - Accueil
{% endblock %}

{# image, titre et phrase d'accroche #}
{% block header %}
	<div class="jumbotron jumbotron-fluid" id="header">
		<div class="container-fluid d-flex flex-column justify-content-center text-center color-perso2">
			<h1 class="text-uppercase fw-bolder text-shadow-bg-perso3">snowtricks</h1>
			<h4 class="fw-bolder">Site communautaire de figures de snowboard</h4>
		</div>
	</div>

	<div class="header-arrow">
		<a href="#tricks">
			<i class="fas fa-arrow-down fa-2x color-perso2"></i>
		</a>
	</div>
{% endblock %}

{# liste des tricks #}
{% block body %}
	<div class="row mb-3 pt-3" id="tricks">
		{% for t in tricks %}
			<div class="col-lg-3 col-md-4 col-sm-6 mb-3">
				<div class="card">
					<img src="{{ t.firstPicture.src }}" class="img-fluid" alt="{{ t.name }}">
					<div class="card-body text-center">
						<a href="{{ path('trick', {'slug': t.slug}) }}" class="card-link fw-bold">{{ t.name | upper }}</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

	<div class="text-center">
		<button type="button" class="btn btn-dark btn-lg bg-perso2">Afficher plus</button>
	</div>
{% endblock %}
