{% extends "base.html.twig" %}

{% block title %}
	SnowTricks - Accueil
{% endblock %}

{# image, titre et phrase d'accroche #}
{% block header %}
	<div class="jumbotron_header jumbotron-fluid" id="header">
		<div class="container-fluid d-flex flex-column justify-content-center text-center color-perso2">
			<h1 class="text-uppercase fw-bolder">snowtricks</h1>
			<h4 class="fw-bolder">Site communautaire de figures de snowboard</h4>
		</div>
	</div>

	<div class="header-arrow">
		<a href="#tricks">
			<i class="fas fa-arrow-down fa-2x color-perso2"></i>
		</a>
	</div>
{% endblock %}

{# liste des tricks #}
{% block body %}
	<div class="row mb-3 pt-3" id="tricks">
		{% for trick in tricks %}
			<div class="col-lg-3 col-md-4 col-sm-6 mb-3">
				<div class="card">
					<img src="{{ trick.firstPicture.src }}" class="img-fluid" alt="{{ trick.name }}">

					<div class="card-body d-inline">
						<a href="{{ path('trick', {'slug': trick.slug}) }}" class="card-link fw-bold">{{ trick.name | upper }}</a>

						<a href="#"><i class="fas fa-pencil-alt"></i></a>

						<button type="button" class="btn bg-perso-2" data-bs-toggle="modal" data-bs-target="#modal-{{ trick.id }}">
  							<i class="fas fa-trash-alt"></i>
						</button>
					</div>

				</div>
			</div>
		{% endfor %}
	</div>

	<div class="text-center">
		<button type="button" class="btn btn-dark btn-lg bg-perso2">Afficher plus</button>
	</div>
{% endblock %}
