{% extends "base.html.twig" %}

{% form_theme formView _self %}

{% block title %}
	SnowTricks - Edition de
	{{ trick.name }}
{% endblock %}

{% block body %}
	<div class="row my-3 mb-3">
		<div class="form-control">

			<div class="text-center color-perso2">
				<h3>Editer la figure <strong>{{ trick.name }}</strong></h3>
			</div>

			{{ form_start(formView) }}

			<div class="row">
				<div class="col">
					{{ form_row(formView.name) }}
					{{ form_row(formView.content) }}
					{{ form_row(formView.category) }}
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn text-white bg-perso2 mb-3">
					<i class="fas fa-save"></i>
					Enregistrer
				</button>
			</div>

			{{ form_end(formView) }}
		</div>
	</div>
{% endblock %}

{% block form_row %}
	<div class="form-group mb-3">
		{{ form_label(form) }}
		{{ form_widget(form, {'attr': {'class': 'form-control'} }) }}
		{{ form_help(form) }}
		{{ form_errors(form) }}
	</div>
{% endblock %}
