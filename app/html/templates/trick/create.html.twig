{% extends "base.html.twig" %}

{# {% form_theme formView 'form_themes: ['bootstrap_4_layout.html.twig']' %} #}

{% block title %}
	SnowTricks - Cr√©ation d'une figure
{% endblock %}

{% block body %}
	<div class="row my-3 mb-3">
		<div class="form-control">

			<div class="text-center">
				<h1>Nouvelle figure</h1>
			</div>

			{{ form_start(formView) }}

			<div class="row">
				<div class="col">
					<div class="form-group mb-3">
						{{ form_row(formView.name) }}
					</div>

					<div class="form-group mb-3">
						{{ form_row(formView.content) }}
					</div>

					<div class="form-group mb-3">
						{{ form_row(formView.category) }}
					</div>

					<div class="form-group mb-3">
						{{ form_row(formView.picture) }}
					</div>

					<div class="form-group mb-3">
						{{ form_row(formView.video) }}
					</div>
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn text-white bg-perso2 mb-3">
					<i class="fas fa-save"></i>
					Ajouter la nouvelle figure
				</button>
			</div>

			{{ form_end(formView) }}
		</div>
	</div>
{% endblock %}

{% block form_row %}
	<div class="form-group">
		{{ form_label(form) }}
		{{ form_widget(form, {'attr': {'class': 'form-control'} }) }}
		{{ form_help(form) }}
		{{ form_errors(form) }}
	</div>
{% endblock %}
